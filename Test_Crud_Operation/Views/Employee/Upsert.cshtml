@model Test_Crud_Operation.Models.Employee
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Employee" : "New Employee";
    var saveUpdate = Model.Id != 0 ? "Update" : "Save";
}

<div class="row">
    <div class="col-md-8">

        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-9">
                    <h2 class="text-primary">@title</h2>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            <div class="col-8">
                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="City"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="Salary"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Salary" class="form-control" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row m-2 p-2">
                    <div class="col-4">
                        <label asp-for="imageUrl"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" asp-for="imageUrl" class="form-control" />
                        <span asp-validation-for="imageUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row m-2 p-2">
                    <div class="col-8 offset-4 ">
                        @if (Model.Id != 0)
                        {
                            <div class="form-group row">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-info form-control">@saveUpdate</button>
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="form-group row">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-info form-control">@saveUpdate</button>
                                </div>
                                <div class="col-6">
                                    <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </form>
    </div>
    <div class="col-md-4">
        @if (Model.imageUrl != null && Model.imageUrl.Length > 0)
        {
            var base64 = Convert.ToBase64String(Model.imageUrl);
            var imgSrc = String.Format("data:image/png;base64,{0}", base64);
            <img src="@imgSrc" class="img-fluid img-thumbnail" />
        }
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
