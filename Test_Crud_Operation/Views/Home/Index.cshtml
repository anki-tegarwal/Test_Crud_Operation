@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<label for="departmentDropdown">Select Department:</label>
<select id="departmentDropdown">
    <option value="">--Select Department--</option>
    @foreach (var department in ViewBag.Departments as List<string>)
    {
        <option value="@department">@department</option>
    }
</select>
<input id="findButton" value="Find" type="button" />
<br />
<div class="row">
    <div class="col-sm-6">
        <div>
            <canvas id="myBarChart" style="max-width:400px;max-height:430px;"></canvas>
        </div>
    </div>
    <div col-sm-6>
         <div>
        <canvas id="myPieChart" style="max-width:400px;max-height:430px;"></canvas>
    </div>
    </div>
   
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        var barCtx = document.getElementById('myBarChart').getContext('2d');
        var pieCtx = document.getElementById('myPieChart').getContext('2d');
        var myBarChart, myPieChart;

        $('#findButton').click(function () {
            var selectedDepartment = $('#departmentDropdown').val();
            if (selectedDepartment) {
                $.ajax({
                    url: '@Url.Action("GetEmployeeDataByDepartment", "Home")',
                    type: 'GET',
                    data: { department: selectedDepartment },
                    success: function (data) {
                        console.log('Data received:', data); // Log the received data

                        var months = [];
                        var employeeCounts = [];

                        if (data.error) {
                            alert(data.error);
                            return;
                        }

                        data.forEach(function (item) {
                            months.push(item.month);
                            employeeCounts.push(item.count);
                        });

                        // Destroy existing charts if they exist
                        if (myBarChart) {
                            myBarChart.destroy();
                        }
                        if (myPieChart) {
                            myPieChart.destroy();
                        }

                        // Create Bar Chart
                        myBarChart = new Chart(barCtx, {
                            type: 'bar',
                            data: {
                                labels: months,
                                datasets: [{
                                    label: 'Number of Employees',
                                    data: employeeCounts,
                                    backgroundColor: 'rgba(54, 162, 235, 0.5)',
                                    borderColor: 'rgba(54, 162, 235, 1)',
                                    borderWidth: 2,
                                    borderRadius: 5,
                                    hoverBackgroundColor: 'rgba(54, 162, 235, 0.7)',
                                }]
                            },
                            options: {
                                plugins: {
                                    title: {
                                        display: true,
                                        text: 'Employees Joined Per Month by Department',
                                        font: {
                                            size: 18,
                                            weight: 'bold'
                                        },
                                        padding: {
                                            top: 10,
                                            bottom: 30
                                        }
                                    },
                                    legend: {
                                        display: false
                                    }
                                },
                                scales: {
                                    x: {
                                        grid: {
                                            display: false
                                        },
                                        title: {
                                            display: true,
                                            text: 'Months',
                                            font: {
                                                size: 14
                                            }
                                        }
                                    },
                                    y: {
                                        beginAtZero: true,
                                        grid: {
                                            borderDash: [5, 5]
                                        },
                                        title: {
                                            display: true,
                                            text: 'Number of Employees',
                                            font: {
                                                size: 14
                                            }
                                        }
                                    }
                                },
                                layout: {
                                    padding: {
                                        left: 20,
                                        right: 20,
                                        top: 10,
                                        bottom: 10
                                    }
                                },
                                animation: {
                                    duration: 1000,
                                    easing: 'easeOutBounce'
                                },
                                hover: {
                                    animationDuration: 500,
                                },
                                responsiveAnimationDuration: 500,
                            }
                        });

                        // Create Pie Chart
                        myPieChart = new Chart(pieCtx, {
                            type: 'pie',
                            data: {
                                labels: months,
                                datasets: [{
                                    label: 'Employee Joined',
                                    data: employeeCounts,
                                    backgroundColor: [
                                        'rgba(255, 99, 132, 0.5)',
                                        'rgba(54, 162, 235, 0.5)',
                                        'rgba(255, 206, 86, 0.5)',
                                        'rgba(75, 192, 192, 0.5)',
                                        'rgba(153, 102, 255, 0.5)',
                                        'rgba(255, 159, 64, 0.5)',
                                    ],
                                    borderColor: [
                                        'rgba(255, 99, 132, 1)',
                                        'rgba(54, 162, 235, 1)',
                                        'rgba(255, 206, 86, 1)',
                                        'rgba(75, 192, 192, 1)',
                                        'rgba(153, 102, 255, 1)',
                                        'rgba(255, 159, 64, 1)',
                                    ],
                                    borderWidth: 1
                                }]
                            },
                            options: {
                                plugins: {
                                    title: {
                                        display: true,
                                        text: 'Employee Distribution by Month',
                                        font: {
                                            size: 18,
                                            weight: 'bold'
                                        },
                                        padding: {
                                            top: 10,
                                            bottom: 30
                                        }
                                    },
                                    legend: {
                                        position: 'bottom'
                                    }
                                },
                                responsive: true,
                                animation: {
                                    duration: 1000,
                                    easing: 'easeOutBounce'
                                },
                            }
                        });
                    },
                    error: function (xhr, status, error) {
                        console.log('AJAX Error:', xhr, status, error); // Log the error details
                        alert('Error retrieving data');
                    }
                });
            } else {
                alert('Please select a department');
            }
        });
    });
</script>


